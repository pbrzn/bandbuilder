 header {
   padding: 7px;
   text-align: center;
   font-family: 'Futura';
   /* background: #80A4F2; */
   color: #D5DAE9;
   font-size: 35px;
 }

 body {
   font-family: 'Futura';
   color: #000000;
   text-align: center;
   font-variant-caps: small-caps;
   text-shadow: 1px 1px #B5BDC7;
   background-image: url(<%= asset_path 'jorik-kleen-x1yHtSg1DsQ-unsplash.jpg' %>);
   background-repeat: no-repeat;
   background-attachment: fixed;
   background-size: cover;
 }

 body div.container {
   background: #CCCCCC;
   border: 12px solid #FFFFFF;
   margin-left: auto;
   margin-right: auto;
   padding: 2.08333333333%; /* 5px / 240px */
   width: 30%;
 }

 body div.container div.error_explanation {
   color: red;
   font-style: italic;
 }
