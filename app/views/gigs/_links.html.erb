<% if params[:music_direcor_id] %>
  <%= link_to gig.title, music_director_gig_path(params[:music_director_id], gig) %>
  <% if current_user.id == params[:music_director_id] %>
    <%= button_to "Delete Gig", music_director_gig_path(current_user, gig), method: 'delete' %>
  <% end %>
<% elsif params[:musician_id] %>
  <%= link_to gig.title, musician_gig_path(params[:musician_id], gig) %>
<% else %>
  <%= link_to gig.title, gig_path(gig) %>
<% end %>
