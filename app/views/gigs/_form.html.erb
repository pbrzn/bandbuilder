<%= form_for gig do |f| %>
  <%= f.hidden_field :music_director_id, current_user.id %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :start_date %>
  <%= f.datetime_field :start_date %>
  <br>
  <%= f.label :end_date %>
  <%= f.datetime_field :end_date %>
  <br>
  <%= f.label "Add Instruments" %>
  <%= f.collection_check_boxes :instrument_ids, Instrument.all, :id, :name %>
  <br>
  <%= f.fields_for :instruments, gig.instruments.build do |instruments_fields| %>
    <%= instruments_fields.label "New Instrument Name" %>
    <%= instruments_fields.text_area :name %>
  <% end %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_ids, Genre.all, :id, :name %>
  <br>
  <%= f.submit %>
<% end %>
