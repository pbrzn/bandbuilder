<!DOCTYPE html>
<html>
  <head>
    <title>Bandbuilder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
      <nav>
        <div id="site_title_logged_in">
          <ul>
            <strong><li><%= link_to "BANDBUILDER", root_path, id: "logo" %></li></strong>
            <li><%= link_to "Musicians", musicians_path %></li>
            <li><%= link_to "Music Directors", music_directors_path %></li>
            <li><%= link_to "Gigs", gigs_path %></li>
            <li><%= link_to "Instruments", instruments_path %></li>
            <li><%= link_to "Genres", genres_path %></li>
            <li><%= link_to "Log Out", logout_path, method: 'post' %></li>
          </ul>
        </div>
      </nav>
      <% else %>

      <div id="site_title">
        <strong>BANDBUILDER</strong>
      </div>
      <% end %>

    </header>

    <br>
    <br>

    <div class="container">
      <%= yield %>
    </div>

    <footer>

    </footer>
  </body>
</html>
