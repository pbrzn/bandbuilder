<div class="success_message">
  <%= flash[:message] %>
</div>

<% if @musician.errors.any? %>
  <%= render partial: 'users/errors', locals: {user: @musician} %>
<% end %>

<h1><%= @musician.name %> â€“ <%= @musician.instrument_name %></h1>

<% if !@musician.bio.nil? %>
  <h2>Bio:</h2>
  <div class="bios_and_descriptions">
